{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Code",
      "type": "shell",
      "linux": {
        "command": ".vscode/runTask.sh"
      },
      "osx": {
        "command": ".vscode/runTask.sh"
      },
      "args": [
        "${file}",
        "${fileExtname}"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}